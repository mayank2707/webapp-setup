<h1>Listing shows</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Banner</th>
      <th>Overview</th>
      <th>Network</th>
      <th>Airsdayofweek</th>
      <th>Airstime</th>
      <th>Genres</th>
      <th>Rating</th>
      <th>Runtime</th>
      <th>Status</th>
      <th>Fanart</th>
      <th>Poster</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.name %></td>
        <td><%= show.banner %></td>
        <td><%= show.overview %></td>
        <td><%= show.network %></td>
        <td><%= show.airsDayOfWeek %></td>
        <td><%= show.airsTime %></td>
        <td><%= show.genres %></td>
        <td><%= show.rating %></td>
        <td><%= show.runtime %></td>
        <td><%= show.status %></td>
        <td><%= show.fanart %></td>
        <td><%= show.poster %></td>
        <td><%= link_to 'Show', show %></td>
        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <!-- Example of access controll -->
        <% if can? :destroy, Show %>
          <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

